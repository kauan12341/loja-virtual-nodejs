    <title>Roupas, utencilios, etc.</title>
</head>
<body>
    <header>
        <a href="/"><h1>Loja Virtual</h1></a>
    </header>
    <% for(var i = 0; db.length > i; i++){ %>
    <div class="venda-produto">
        <div class="produto-descricao">
            <h2><%= db[i].nome_do_produto %></h2>
            <br><br>
            <p><%= db[i].descricao_do_produto %></p>
        </div>
        <div class="produto-subimagem">
            <div style="width: 75px;">
                <div style="background-color: orange;height: 100px;width: 100%;"></div>
                <br>
                <div style="background-color: orange;height: 100px;width: 100%;"></div>
                <br>
                <div style="background-color: orange;height: 100px;width: 100%;"></div>
                <br>
                <div style="background-color: orange;height: 100px;width: 100%;"></div>
            </div>
        </div>
        <div class="produto-imagens">
            <div style="background-color: orange;height: 100%;width: 350px;background-image:url('<%= db[i].imagem_do_produto %>');background-position:center; background-size: cover;background-repeat: no-repeat;"></div>
        </div>
        <div class="produto-preco">
            <h2 style="font-size: 50px;">R$ <%= db[i].preco %></h2>
            <br>
            <p style="margin-bottom: 15px;"><img src="/img/credit-card.png" style="height: 20px;"> Pagar até 12x no cartão da nu back ou avista</p>
            <br>
            <h3 style="margin-bottom: 15px;">Cores</h3>
            <div style="display: flex;">
                <div style="background-color: orange;height: 100px;width: 55px;margin: 0 5px;"></div>
                <div style="background-color: blue;height: 100px;width: 55px;margin: 0 5px;"></div>
                <div style="background-color: lightgreen;height: 100px;width: 55px;margin: 0 5px;"></div>
            </div>
            <br>
            <h3 style="margin-bottom: 48px;">Tamanhos: <%= db[i].tamanho%></h3>
            <br>
            <button class="botao-comprar" style="margin-bottom: 15px;"><h3>Comprar</h3></button>
            <button class="botao-adicionar-carinho" style="display: flex; justify-content: center;"><h3>Adicionar ao carrinho</h3></button>
        </div>
    </div>
    <% }; %>
